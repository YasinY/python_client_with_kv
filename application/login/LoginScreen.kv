#Declares parent properties
<Button>:
    font_size: 10
	size: 100, 30
<TextInput>
    height: 30
    width: 200

#Declares custom parent, sub elements are childs
<LoginScreenWidgets>:
    Label:
        text: "Username:" # The text to display
        pos: username.pos[0] - self.width, username.pos[1] - self.height / 3 # Dynamic, scales on the position X defined by TextInput 'username'
    Label:
        text: "Password:" # The text to display
        pos: password.pos[0] - self.width, password.pos[1] - self.height / 3 # Dynamic, positon scales on the position X defined by TextInput 'password'
                                                                             # Subtracted by itself so it's beside the TextInput 'password'
    TextInput:
        id: username # The id
        pos: root.center_x - self.width / 2, root.center_y # Dynamic, position scales on root center_x
    TextInput:
        id: password # The id
        pos: root.center_x - self.width / 2, root.center_y - self.height # Dynamic, position scales on root center_x/y, takes position
        password: True #Makes the password not so visible
    CheckBox:
        id: checkbox
        on_press:
    Label:
        text: "Remember username"
        pos: checkbox.pos[0] + self.width, checkbox.pos[1]
    Button:
        id: login # The id
        text: "Login" # The text to display on the button
        pos: root.center_x - register.width, root.center_y - self.height - password.height # Dynamic, position scales on root center_x, subtracted by id 'register' width so
                                                                                           # 'login' is beside the Button 'register'
        on_press: root.login(username.text, password.text)
    Button:
        id: register # The id
        text: "Register" # The text to display on the button
        pos: root.center_x, login.pos[1] # Dynamic, position scales on root center_x