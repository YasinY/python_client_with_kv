#:import LoginScreen application.screen.impl.login.LoginScreen
#:import ChatHandler application.screen.impl.chat.ChatHandler
#:import Chat application.screen.impl.chat.impl.Chat
#Declares parent properties
#Screenmanager

<ScreenManagement>
    LoginScreen:
    ChatHandler:
    Chat:
#Declares custom parent, sub elements are childs
<LoginScreen>:
    name: "loginScreen"
    id: loginScreen
    Label:
        text: 'Username'
        pos: username.pos[0] - self.width, username.pos[1] - self.height / 3
        size_hint: 0, 0
    TextInput:
        id: username
        pos: root.center_x - self.width / 2, root.center_y
        size_hint: 0.25, 0.05
    Label:
        text: 'Password'
        pos: password.pos[0] - self.width, password.pos[1] - self.height / 3
        size_hint: 0, 0
    TextInput:
        id: password
        password: True
        size_hint: 0.25, 0.05
        pos: username.pos[0], username.pos[1] - self.height
    Button:
        id: login
        text: 'Login'
        pos: 30, 30
        size_hint: password.size_hint_x / 2, 0.05
        pos: password.pos[0], password.pos[1] - self.height
        on_press: root.login(username.text, password.text)
    Button:
        id: register
        text: 'Register'
        pos: 30, 30
        size_hint: password.size_hint_x / 2, 0.05
        pos: login.pos[0] + self.width, login.pos[1]
<ChatHandler>
    name: "chatHandler"
    id: chatHandler
    Label:
        text: "Chathandler here" # The text to display
